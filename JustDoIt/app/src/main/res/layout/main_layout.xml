<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="5"
    android:background="#ff45af6d">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Title_Image"
            android:layout_weight="2"
            android:src="@drawable/just_do_it" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/easy_btn"
            android:src="@drawable/facil_image"
            android:layout_marginLeft="@dimen/firtbtn"
            android:background="@android:drawable/btn_default" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hard_btn"
            android:src="@drawable/medio_image"
            android:layout_marginLeft="@dimen/secondbtn"
            android:background="@android:drawable/btn_default"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/daring_btn"
            android:src="@drawable/dificil_image"
            android:layout_marginLeft="@dimen/thirdbtn"
            android:background="@android:drawable/btn_default"/>
    </LinearLayout>

</LinearLayout>